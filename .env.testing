# 应用配置
APP_NAME=TasksHub
APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_PORT=3000

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=taskshub_test
DB_USERNAME=taskshub_test
DB_PASSWORD=test_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=test_password
REDIS_DB=0

# JWT配置
JWT_SECRET=testing_jwt_secret_key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 日志配置
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_DAYS=7

# 监控配置
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

# 测试配置
TEST_DATABASE_URL=mysql://taskshub_test:test_password@localhost:3306/taskshub_test
TEST_REDIS_URL=redis://:test_password@localhost:6379/0 